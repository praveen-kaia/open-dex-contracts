{
  "name": "@kaiachain/open-dex-contracts",
  "description": "This repository is for smart-contracts part of kaia's opensource DEX.",
  "version": "0.0.1",
  "scripts": {
    "compile": "hardhat compile",
    "coverage": "env COVERAGE=true hardhat coverage",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js": "eslint --ignore-path .gitignore .",
    "clean": "hardhat clean && rimraf build contracts/build",
    "test": "hardhat test"
  },
  "files": [
    "/contracts/**/*.sol",
    "/artifacts/contracts/**/*.json",
    "/typechain/**",
    "!/contracts/mocks/**/*",
    "!/artifacts/contracts/mocks/*",
    "!/typechain/**/mocks/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kaiachain/open-dex-contracts.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "security",
    "kaia",
    "dex"
  ],
  "author": "Kaia Community <developer@kaia.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaiachain/open-dex-contracts/issues"
  },
  "homepage": "https://github.com/kaiachain/open-dex-contracts#readme",
  "devDependencies": {
    "@kaiachain/contracts": "^1.0.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.46",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "bignumber.js": "^9.0.2",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethers": "^5.6.8",
    "hardhat": "^2.22.7",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.7.22",
    "ts-node": "^10.8.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.3"
  }
}
